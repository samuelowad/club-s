{
  "compilerOptions": {
    "target": "es6",                         // Specify ECMAScript target version
    "module": "commonjs",                    // Specify module code generation
    "strict": true,                          // Enable all strict type-checking options
    "esModuleInterop": true,                 // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure that casing is consistent in imports
    "outDir": "./dist",                      // Specify the output directory for compiled files
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",                               // Include all TypeScript files in src
    "proto/**/*"                             // Include all generated proto declaration files
  ],
  "exclude": [
    "node_modules"                           // Exclude node_modules
  ]
}

